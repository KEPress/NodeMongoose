<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
  
    <%- include('../includes/navigate.ejs') %>
    <main>
        <% if(errorMessage) { %>
            <div class="info-message info-message-error">
                <%= errorMessage %>
            </div>
        <% } %>
        <form action="/change" method="POST" class="login-form">
            <div class="form-content">
                <label for="passcode">New Passcode</label>
                <input type="password" name="passcode" id="passcode" />
            </div>
            <input type="hidden" name="userId" value="<%= userId %>" />
            <input type="hidden" name="token" value="<%= token %>" />
            <%- include('../includes/csrf.ejs') %>
            <button type="submit">Update Passcode</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>